
dataType reference {
    pattern: '[A-Za-z0-9_\-]+';
}

dataType statusCategory {
    pattern: '[A-Za-z0-9_\-]+';
}

dataType transitionType {
    values: 'submit', 'approve', 'reject', 'send', 'pass', 'fail', 'error';
}

root element roles {
    tagName: 'roles';
}

element role {
    tagName: 'role';
    allowedContent: elements only;
    attributes: reference;
    subelements: name, description (optional);
}