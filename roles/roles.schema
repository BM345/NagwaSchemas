
dataType reference {
    pattern: '[A-Za-z0-9_\-]+';
}

root element roles {
    tagName: 'roles';
    subelements: role (n >= 0);
}

element role {
    tagName: 'role';

    attribute reference {
        type: reference;
    }

    subelements: name (n = 1), description (0 <= n <= 1);
}

element name {
    tagName: 'name';
    allowedContent: text;
}

element description {
    tagName: 'description';
    allowedContent: text;
}